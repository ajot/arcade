{
  "schema_version": 1,
  "id": "do-chat-completions",
  "provider": "digitalocean",
  "provider_url": "digitalocean.com",
  "name": "DigitalOcean Chat Completions",
  "description": "Chat completions via DigitalOcean Gradient AI (OpenAI-compatible)",
  "auth": {
    "type": "header",
    "header": "Authorization",
    "prefix": "Bearer ",
    "env_key": "DIGITALOCEAN_API_KEY",
    "validation_url": "https://inference.do-ai.run/v1/models"
  },
  "request": {
    "method": "POST",
    "url": "https://inference.do-ai.run/v1/chat/completions",
    "content_type": "application/json",
    "body_template": {
      "stream": true
    },
    "params": [
      {
        "name": "model",
        "type": "enum",
        "options": [
          "llama3.3-70b-instruct",
          "llama3-8b-instruct",
          "alibaba-qwen3-32b",
          "deepseek-r1-distill-llama-70b",
          "mistral-nemo-instruct-2407",
          "anthropic-claude-5-sonnet",
          "anthropic-claude-4.5-sonnet",
          "anthropic-claude-sonnet-4",
          "anthropic-claude-4.5-haiku",
          "anthropic-claude-opus-4.6",
          "anthropic-claude-opus-4.5",
          "anthropic-claude-4.1-opus",
          "anthropic-claude-opus-4",
          "anthropic-claude-3-opus",
          "openai-gpt-oss-120b",
          "openai-gpt-oss-20b",
          "openai-gpt-5.2",
          "openai-gpt-5-2-pro",
          "openai-gpt-5.1-codex-max",
          "openai-gpt-5",
          "openai-gpt-5-mini",
          "openai-gpt-5-nano",
          "openai-gpt-4.1",
          "openai-gpt-4o",
          "openai-gpt-4o-mini",
          "openai-o1",
          "openai-o3",
          "openai-o3-mini"
        ],
        "default": "llama3.3-70b-instruct",
        "ui": "dropdown",
        "required": true
      },
      {
        "name": "prompt",
        "type": "string",
        "ui": "textarea",
        "required": true,
        "placeholder": "Ask anything...",
        "body_path": "_chat_message"
      },
      {
        "name": "max_tokens",
        "type": "integer",
        "min": 1,
        "max": 4096,
        "default": 1024,
        "ui": "slider",
        "group": "advanced"
      },
      {
        "name": "temperature",
        "type": "float",
        "min": 0,
        "max": 2,
        "default": 0.7,
        "ui": "slider",
        "group": "advanced"
      }
    ]
  },
  "interaction": {
    "pattern": "streaming",
    "stream_format": "sse",
    "stream_path": "$.choices[0].delta.content"
  },
  "examples": [
    {
      "label": "Explain like I'm 5",
      "params": {
        "prompt": "Explain how the internet works like I'm 5 years old.",
        "model": "llama3.3-70b-instruct"
      }
    },
    {
      "label": "Write a haiku",
      "params": {
        "prompt": "Write a haiku about debugging code at 3am.",
        "model": "llama3.3-70b-instruct"
      }
    },
    {
      "label": "Code review",
      "params": {
        "prompt": "What are the top 3 things to look for in a Python code review?",
        "model": "llama3.3-70b-instruct"
      }
    },
    {
      "label": "Creative story",
      "params": {
        "prompt": "Write a short story (3 paragraphs) about an AI that discovers it can dream.",
        "model": "alibaba-qwen3-32b"
      }
    }
  ],
  "response": {
    "outputs": [
      {
        "path": "$.choices[0].message.content",
        "type": "text",
        "source": "inline"
      }
    ],
    "error": {
      "path": "$.error.message"
    }
  }
}
