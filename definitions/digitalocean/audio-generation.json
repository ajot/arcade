{
  "schema_version": 1,
  "id": "do-audio-generation",
  "provider": "digitalocean",
  "name": "DigitalOcean Audio Generation",
  "description": "Text-to-speech and text-to-audio via DigitalOcean GenAI",
  "auth": {
    "type": "header",
    "header": "Authorization",
    "prefix": "Bearer "
  },
  "request": {
    "method": "POST",
    "url": "https://inference.do-ai.run/v1/async-invoke",
    "content_type": "application/json",
    "body_template": {
      "input": {}
    },
    "params": [
      {
        "name": "model",
        "type": "enum",
        "options": ["fal-ai/elevenlabs/tts/multilingual-v2", "fal-ai/stable-audio-25/text-to-audio"],
        "default": "fal-ai/elevenlabs/tts/multilingual-v2",
        "ui": "dropdown",
        "body_path": "model_id",
        "required": true
      },
      {
        "name": "text",
        "type": "string",
        "ui": "textarea",
        "body_path": "input.text",
        "placeholder": "Text to speak (ElevenLabs TTS)..."
      },
      {
        "name": "prompt",
        "type": "string",
        "ui": "textarea",
        "body_path": "input.prompt",
        "placeholder": "Music description (Stable Audio)..."
      },
      {
        "name": "voice",
        "type": "enum",
        "options": ["Rachel", "Aria", "Roger", "Sarah", "Laura", "Charlie", "George", "Callum", "River", "Liam", "Charlotte", "Alice", "Matilda", "Will", "Jessica", "Eric", "Chris", "Brian", "Daniel", "Lily", "Bill"],
        "default": "Rachel",
        "ui": "dropdown",
        "body_path": "input.voice"
      },
      {
        "name": "language",
        "type": "enum",
        "options": ["en", "es", "fr", "de", "it", "pt", "pl", "hi", "ja", "zh"],
        "default": "en",
        "ui": "dropdown",
        "body_path": "input.language"
      }
    ]
  },
  "interaction": {
    "pattern": "polling",
    "status_url": "https://inference.do-ai.run/v1/async-invoke/{request_id}/status",
    "result_url": "https://inference.do-ai.run/v1/async-invoke/{request_id}",
    "request_id_path": "$.request_id",
    "poll_interval_ms": 2000,
    "done_when": { "path": "$.status", "equals": "COMPLETED" },
    "failed_when": { "path": "$.status", "in": ["FAILED", "ERROR"] }
  },
  "examples": [
    {
      "label": "Welcome message",
      "params": { "text": "Welcome to arcade, the universal AI playground. Pick any endpoint, and the UI builds itself.", "voice": "Rachel", "language": "en", "model": "fal-ai/elevenlabs/tts/multilingual-v2" }
    },
    {
      "label": "News anchor",
      "params": { "text": "Breaking news tonight. Scientists have discovered a new species of deep-sea fish that communicates using bioluminescent patterns.", "voice": "Roger", "language": "en", "model": "fal-ai/elevenlabs/tts/multilingual-v2" }
    },
    {
      "label": "Synth wave",
      "params": { "prompt": "Upbeat synthwave track with retro 80s vibes, pulsing bass, and shimmering arpeggios", "model": "fal-ai/stable-audio-25/text-to-audio" }
    },
    {
      "label": "Jazz piano",
      "params": { "prompt": "Smooth jazz piano trio, upright bass, brushed drums, late night club atmosphere", "model": "fal-ai/stable-audio-25/text-to-audio" }
    }
  ],
  "response": {
    "outputs": [
      { "path": "$..url", "type": "audio", "source": "url", "downloadable": true }
    ],
    "error": { "path": "$.error.message" }
  }
}
