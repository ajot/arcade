{
  "schema_version": 1,
  "id": "berget-chat-completions",
  "provider": "berget",
  "provider_display_name": "Berget",
  "provider_url": "berget.ai",
  "name": "Berget AI Chat Completions",
  "description": "Berget AI chat with streaming (OpenAI-compatible, EU sovereign infrastructure)",
  "auth": {
    "type": "header",
    "header": "Authorization",
    "prefix": "Bearer ",
    "env_key": "BERGET_API_KEY",
    "validation_url": "https://api.berget.ai/v1/models"
  },
  "request": {
    "method": "POST",
    "url": "https://api.berget.ai/v1/chat/completions",
    "content_type": "application/json",
    "body_template": {
      "stream": true
    },
    "params": [
      {
        "name": "model",
        "type": "enum",
        "options": [
          "mistralai/Mistral-Small-3.1-24B-Instruct-2503",
          "openai/gpt-oss-120b"
        ],
        "default": "mistralai/Mistral-Small-3.1-24B-Instruct-2503",
        "ui": "dropdown",
        "required": true
      },
      {
        "name": "prompt",
        "type": "string",
        "ui": "textarea",
        "required": true,
        "placeholder": "Ask anything...",
        "body_path": "_chat_message"
      },
      {
        "name": "max_tokens",
        "type": "integer",
        "min": 1,
        "max": 4096,
        "default": 1024,
        "ui": "slider",
        "group": "advanced"
      },
      {
        "name": "temperature",
        "type": "float",
        "min": 0,
        "max": 2,
        "default": 0.7,
        "ui": "slider",
        "group": "advanced"
      }
    ]
  },
  "interaction": {
    "pattern": "streaming",
    "stream_format": "sse",
    "stream_path": "$.choices[0].delta.content"
  },
  "examples": [
    {
      "label": "Explain like I'm 5",
      "params": {
        "prompt": "Explain how the internet works like I'm 5 years old.",
        "model": "mistralai/Mistral-Small-3.1-24B-Instruct-2503"
      }
    },
    {
      "label": "Write a haiku",
      "params": {
        "prompt": "Write a haiku about debugging code at 3am.",
        "model": "mistralai/Mistral-Small-3.1-24B-Instruct-2503"
      }
    },
    {
      "label": "Code review",
      "params": {
        "prompt": "What are the top 3 things to look for in a Python code review?",
        "model": "mistralai/Mistral-Small-3.1-24B-Instruct-2503"
      }
    },
    {
      "label": "Creative story",
      "params": {
        "prompt": "Write a short story (3 paragraphs) about an AI that discovers it can dream.",
        "model": "openai/gpt-oss-120b"
      }
    }
  ],
  "response": {
    "outputs": [
      {
        "path": "$.choices[0].message.content",
        "type": "text",
        "source": "inline"
      }
    ],
    "error": {
      "path": "$.error.message"
    }
  }
}