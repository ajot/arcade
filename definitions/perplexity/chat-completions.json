{
  "schema_version": 1,
  "id": "perplexity-chat-completions",
  "provider": "perplexity",
  "provider_url": "perplexity.ai",
  "name": "Perplexity Chat Completions",
  "description": "Perplexity chat with streaming (OpenAI-compatible)",
  "auth": {
    "type": "header",
    "header": "Authorization",
    "prefix": "Bearer ",
    "env_key": "PERPLEXITY_API_KEY"
  },
  "request": {
    "method": "POST",
    "url": "https://api.perplexity.ai/chat/completions",
    "content_type": "application/json",
    "body_template": {
      "stream": true
    },
    "params": [
      {
        "name": "model",
        "type": "enum",
        "options": [
          "sonar-pro",
          "sonar",
          "sonar-reasoning-pro"
        ],
        "default": "sonar-pro",
        "ui": "dropdown",
        "required": true
      },
      {
        "name": "prompt",
        "type": "string",
        "ui": "textarea",
        "required": true,
        "placeholder": "Ask anything...",
        "body_path": "_chat_message"
      },
      {
        "name": "max_tokens",
        "type": "integer",
        "min": 1,
        "max": 4096,
        "default": 1024,
        "ui": "slider",
        "group": "advanced"
      },
      {
        "name": "temperature",
        "type": "float",
        "min": 0,
        "max": 2,
        "default": 0.7,
        "ui": "slider",
        "group": "advanced"
      }
    ]
  },
  "interaction": {
    "pattern": "streaming",
    "stream_format": "sse",
    "stream_path": "$.choices[0].delta.content"
  },
  "examples": [
    {
      "label": "Explain like I'm 5",
      "params": {
        "prompt": "Explain how the internet works like I'm 5 years old.",
        "model": "sonar-pro"
      }
    },
    {
      "label": "Write a haiku",
      "params": {
        "prompt": "Write a haiku about debugging code at 3am.",
        "model": "sonar-pro"
      }
    },
    {
      "label": "Code review",
      "params": {
        "prompt": "What are the top 3 things to look for in a Python code review?",
        "model": "sonar-pro"
      }
    },
    {
      "label": "Creative story",
      "params": {
        "prompt": "Write a short story (3 paragraphs) about an AI that discovers it can dream.",
        "model": "sonar-pro"
      }
    }
  ],
  "response": {
    "outputs": [
      {
        "path": "$.choices[0].message.content",
        "type": "text",
        "source": "inline"
      }
    ],
    "error": {
      "path": "$.error.message"
    }
  }
}
