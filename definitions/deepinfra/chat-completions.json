{
  "schema_version": 1,
  "id": "deepinfra-chat-completions",
  "provider": "deepinfra",
  "name": "DeepInfra Chat Completions",
  "description": "DeepInfra chat with streaming (OpenAI-compatible)",
  "auth": {
    "type": "header",
    "header": "Authorization",
    "prefix": "Bearer "
  },
  "request": {
    "method": "POST",
    "url": "https://api.deepinfra.com/v1/openai/chat/completions",
    "content_type": "application/json",
    "body_template": {
      "stream": true
    },
    "params": [
      {
        "name": "model",
        "type": "enum",
        "options": ["meta-llama/Llama-3.3-70B-Instruct-Turbo", "mistralai/Mixtral-8x7B-Instruct-v0.1"],
        "default": "meta-llama/Llama-3.3-70B-Instruct-Turbo",
        "ui": "dropdown",
        "required": true
      },
      {
        "name": "prompt",
        "type": "string",
        "ui": "textarea",
        "required": true,
        "placeholder": "Ask anything...",
        "body_path": "_chat_message"
      },
      {
        "name": "max_tokens",
        "type": "integer",
        "min": 1,
        "max": 4096,
        "default": 1024,
        "ui": "slider",
        "group": "advanced"
      },
      {
        "name": "temperature",
        "type": "float",
        "min": 0,
        "max": 2,
        "default": 0.7,
        "ui": "slider",
        "group": "advanced"
      }
    ]
  },
  "interaction": {
    "pattern": "streaming",
    "stream_format": "sse",
    "stream_path": "$.choices[0].delta.content"
  },
  "examples": [
    {
      "label": "Explain like I'm 5",
      "params": { "prompt": "Explain how the internet works like I'm 5 years old.", "model": "meta-llama/Llama-3.3-70B-Instruct-Turbo" }
    },
    {
      "label": "Write a haiku",
      "params": { "prompt": "Write a haiku about debugging code at 3am.", "model": "meta-llama/Llama-3.3-70B-Instruct-Turbo" }
    },
    {
      "label": "Code review",
      "params": { "prompt": "What are the top 3 things to look for in a Python code review?", "model": "meta-llama/Llama-3.3-70B-Instruct-Turbo" }
    },
    {
      "label": "Creative story",
      "params": { "prompt": "Write a short story (3 paragraphs) about an AI that discovers it can dream.", "model": "meta-llama/Llama-3.3-70B-Instruct-Turbo" }
    }
  ],
  "response": {
    "outputs": [
      { "path": "$.choices[0].message.content", "type": "text", "source": "inline" }
    ],
    "error": { "path": "$.error.message" }
  }
}
