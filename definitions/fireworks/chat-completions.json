{
  "schema_version": 1,
  "id": "fireworks-chat-completions",
  "provider": "fireworks",
  "provider_display_name": "Fireworks",
  "provider_url": "fireworks.ai",
  "name": "Fireworks AI Chat Completions",
  "description": "Fireworks AI chat with streaming (OpenAI-compatible)",
  "auth": {
    "type": "header",
    "header": "Authorization",
    "prefix": "Bearer ",
    "env_key": "FIREWORKS_API_KEY",
    "validation_url": "https://api.fireworks.ai/inference/v1/models"
  },
  "request": {
    "method": "POST",
    "url": "https://api.fireworks.ai/inference/v1/chat/completions",
    "content_type": "application/json",
    "body_template": {
      "stream": true
    },
    "params": [
      {
        "name": "model",
        "type": "enum",
        "options": [
          "accounts/fireworks/models/llama-v3p3-70b-instruct",
          "accounts/fireworks/models/llama-v3p1-405b-instruct",
          "accounts/fireworks/models/llama-v3p1-70b-instruct",
          "accounts/fireworks/models/llama-v3p1-8b-instruct",
          "accounts/fireworks/models/deepseek-v3p2",
          "accounts/fireworks/models/deepseek-v3p1",
          "accounts/fireworks/models/deepseek-v3",
          "accounts/fireworks/models/qwen3-8b",
          "accounts/fireworks/models/qwen3-coder-480b-a35b-instruct",
          "accounts/fireworks/models/qwen2p5-72b-instruct",
          "accounts/fireworks/models/glm-5",
          "accounts/fireworks/models/glm-4p7",
          "accounts/fireworks/models/kimi-k2p5",
          "accounts/fireworks/models/kimi-k2-instruct-0905",
          "accounts/fireworks/models/minimax-m2p5",
          "accounts/fireworks/models/gemma-3-27b-it",
          "accounts/fireworks/models/mistral-small-24b-instruct-2501",
          "accounts/fireworks/models/mixtral-8x22b-instruct",
          "accounts/fireworks/models/mixtral-8x7b-instruct"
        ],
        "default": "accounts/fireworks/models/llama-v3p3-70b-instruct",
        "ui": "dropdown",
        "required": true
      },
      {
        "name": "prompt",
        "type": "string",
        "ui": "textarea",
        "required": true,
        "placeholder": "Ask anything...",
        "body_path": "_chat_message"
      },
      {
        "name": "max_tokens",
        "type": "integer",
        "min": 1,
        "max": 4096,
        "default": 1024,
        "ui": "slider",
        "group": "advanced"
      },
      {
        "name": "temperature",
        "type": "float",
        "min": 0,
        "max": 2,
        "default": 0.7,
        "ui": "slider",
        "group": "advanced"
      }
    ]
  },
  "interaction": {
    "pattern": "streaming",
    "stream_format": "sse",
    "stream_path": "$.choices[0].delta.content"
  },
  "examples": [
    {
      "label": "Explain like I'm 5",
      "params": {
        "prompt": "Explain how the internet works like I'm 5 years old.",
        "model": "accounts/fireworks/models/llama-v3p3-70b-instruct"
      }
    },
    {
      "label": "Write a haiku",
      "params": {
        "prompt": "Write a haiku about debugging code at 3am.",
        "model": "accounts/fireworks/models/llama-v3p3-70b-instruct"
      }
    },
    {
      "label": "Code review",
      "params": {
        "prompt": "What are the top 3 things to look for in a Python code review?",
        "model": "accounts/fireworks/models/llama-v3p3-70b-instruct"
      }
    },
    {
      "label": "Creative story",
      "params": {
        "prompt": "Write a short story (3 paragraphs) about an AI that discovers it can dream.",
        "model": "accounts/fireworks/models/llama-v3p3-70b-instruct"
      }
    }
  ],
  "response": {
    "outputs": [
      {
        "path": "$.choices[0].message.content",
        "type": "text",
        "source": "inline"
      }
    ],
    "error": {
      "path": "$.error.message"
    }
  }
}
